@model TestQuest.Models.MyTests.CreateTest
@{ 
    ViewData["Title"] = "Создать тест";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Личный кабинет</title>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed; /* Закрепленная боковая панель */
            width: 250px;
        }

        .sidebar a {
        color: white;
        padding: 10px 20px;
        display: block;
        text-decoration: none;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
    </style>
</head>
<body>

    <div class="main-content">
        <!-- Шапка -->
        <header class="bg-dark text-white py-3">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <a class="navbar-brand" href="#">Логотип Продмастер(Пока нет)</a>
                </div>
                <div>
                    <span class="me-3">Привет, 
                        @if (ViewBag.WelcomeMessage != null)
                        {
                            @ViewBag.WelcomeMessage 
                        }
                    </span>
                    <button class="btn btn-outline-light">Выйти</button>
                </div>
            </div>
        </header>

        <!-- Боковая панель -->
        <section id="create">
            <h2>Создать тест</h2>
            <form asp-action="CreateTest" method="post">
                <div class="mb-3">
                    <label for="Name" class="form-label">Название теста</label>
                    <input type="text" class="form-control" id="Name" asp-for="Tests.Name" placeholder="Введите название теста">
                    <span asp-validation-for="Tests.Name" class="text-danger"></span>
                </div>

                <h3>Вопросы</h3>
                <div id="questions-container">
